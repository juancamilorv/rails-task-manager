<%= form_with model: task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>

  <% unless task.new_record? %>
    <label>Completed</label>
    <%= f.check_box :completed %>
  <% end %>
  <% action = task.new_record? ? "CREATE" : "UPDATE" %>
  <%= f.submit action %>
<% end %>
